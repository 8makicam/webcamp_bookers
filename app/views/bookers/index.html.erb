<h3>Books</h3>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @book.each do |list| %>
<tr> 
<td>
<%= list.title %>
</td>
<td>
<%= list.body %>
</td>
<td>
<%= link_to "show", bookers_path(list.id) %>
<%= link_to "edit", edit_book_path(list.id) %>
<%= link_to "destroy", destroy_book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>  
<% end %>
</tbody>   
</table>

<h1>Newbook</h1>

<%= form_with model: @book, url:'/bookers', local:true do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <br><%= f.submit 'Create Book' %></br>
  
<% end %>

